# Application
NODE_ENV=development
PORT=3000
APP_NAME=ndr-correlation-engine
APP_VERSION=1.0.0
API_PREFIX=api

# Database
MONGODB_URI=mongodb://localhost:27017/ndr-correlation-engine
DB_HOST=localhost
DB_PORT=27017
DB_NAME=ndr-correlation-engine
DB_USERNAME=admin
DB_PASSWORD=password
DB_AUTH_SOURCE=admin

# Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_CREDENTIALS=false

# Logging
LOG_LEVEL=info
LOGS_PATH=logs
LOG_PRETTY=true
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Email settings
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=user@example.com
MAIL_PASSWORD=password
MAIL_FROM=ndr@example.com
MAIL_SECURE=false

# Features
ENABLE_SWAGGER=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_WEBSOCKETS=true
ENABLE_RATE_LIMIT=true
ENABLE_METRICS=false

# External services
GEOLOCATION_API_KEY=your-api-key
THREATINTEL_API_KEY=your-api-key
VIRUSTOTAL_API_KEY=your-api-key
ABUSEIPDB_API_KEY=your-api-key

# Correlation engine settings
MAX_RULES_PER_TYPE=100
CORRELATION_THREADS=4
ENABLE_BEHAVIORAL_DETECTION=true
ENABLE_ML_DETECTION=false

# WebSocket settings
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
WS_MAX_CONNECTIONS=1000

# Caching
CACHE_TTL=300
CACHE_MAX=1000

# Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=uploads
STORAGE_S3_BUCKET=your-bucket
STORAGE_S3_REGION=your-region
STORAGE_S3_ACCESS_KEY=your-access-key
STORAGE_S3_SECRET_KEY=your-secret-key